<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="@string/add_account_name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/borrower_number"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/add_account_number"
        android:background="#FFFFFF"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:inputType="numberSigned" />

    <EditText
        android:id="@+id/borrower_pin"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/add_account_pin"
        android:background="#FFFFFF"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:inputType="numberPassword" />

    <Button
        android:id="@+id/butSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="@string/add_account_save" />

</LinearLayout>